          Daftar</view><view style="flex: 1; display: flex; flex-direction: row; justify-content: center;" class="progress-text">
          Diverifikasi</view><view style="flex: 1; display: flex; flex-direction: row; justify-content: center;" class="progress-text">
          Berhasil</view></view></view> -->

      <view class="progress-container">

        <view class="circle-container">
          <view class="circle active mb-12">

          </view>
          <view class="line-right"></view>

          <text class="txt-body3-sb">Daftar</text>
        </view>

        <view class="circle-container">

          <view class="line-left"></view>
          <view class="circle mb-12">
            2
          </view>
          <view class="line-right"></view>

          <text class="txt-body3-sb">Diverifikasi</text>
        </view>

        <view class="circle-container">
          <view class="line-left"></view>
          <view class="circle mb-12">
            3
          </view>
          <text class="txt-body3-sb" style="color: #A0A0A0;">Berhasil</text>
        </view>
      </view>

      <view class="progress-text-container">
        <view class="progress-text txt-body3">
          Data mu sedang diverifikasi. Akun obligasi akan selesai pada 20 Okt 2024
        </view>
      </view>

    </view>


    <view class="clipboard-container">
      <text class="txt-body2">Nomor Referensi</text>
      <view class="clipboard-text-container">
        <text class="txt-body2 clipboard-text">
          05074646
        </text>
        <image
          mode="scaleToFill"
          src="/src/app/assets/icons/ic_common_copy.svg"
          style="width: 32rpx; height: 32rpx;"
