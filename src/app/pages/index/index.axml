<view>
  <top-bar type="primary" backgroundColor="bg-off-white" />
  <top-bar type="primary" backgroundColor="bg-off-white" />

  <view class="container">
    <view class="top-content">
      <view class="top-title">
        <text class="txt-h2">Pendaftaran SID diproses</text>
      </view>

      <view class="top-content">
        <text class="txt-body3">
          Terdapat 2 jenis akun yang diproses yaitu reksa dana dan obligasi
        </text>
      </view>
    </view>

    <view class="illustration-container">
      <view class="mock-image">
        <text class="txt-h3">Illustration Placeholder</text>
      </view>
    </view>

    <view class="bottom-content mb-24">
      <view class="top-bottom-content">
        <view class="top-bottom-text">
          <text class="txt-h3">Status Pendaftaran</text>
        </view>

        <view>
          <toggle-tab
            current={{current}}
            items={{ [{title: "Reksa Dana"}, {title: "Obligasi"}] }}
            type="secondary"
          />
        </view>
      </view>
    </view>

    <view class="stepper-container">
